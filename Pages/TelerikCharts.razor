@page "/telerik-charts"

<TelerikChart>
    <ChartSeriesItems>
        <ChartSeries Type="ChartSeriesType.Line" Name="Downloads" Data="@downloads">
            <ChartSeriesTooltip Visible="true" />
        </ChartSeries>
        <ChartSeries Type="ChartSeriesType.Line" Name="Streams" Data="@streams"></ChartSeries>

        <ChartSeries Type="ChartSeriesType.Area" Name="CPU" Data="@cpu">
            <ChartSeriesTooltip Visible="true" />
        </ChartSeries>

        <ChartSeries Type="ChartSeriesType.Bar" Name="Issues" Data="@issues">
            <ChartSeriesTooltip Visible="true" />
        </ChartSeries>
    </ChartSeriesItems>

    <ChartCategoryAxes>
        <ChartCategoryAxis Categories="@years" />
    </ChartCategoryAxes>
</TelerikChart>

<TelerikChart>
    <ChartSeriesItems>
        <ChartSeries Type="ChartSeriesType.Bar" Name="Comments" Data="@comments" >
            <ChartSeriesTooltip Visible="true" />
        </ChartSeries>
        <ChartSeries Type="ChartSeriesType.Bar" Name="Likes" Data="@likes">
            <ChartSeriesTooltip Visible="true" />
        </ChartSeries>
        <ChartSeries Type="ChartSeriesType.Bar" Name="Dislikes" Data="@dislikes" Color="purple">
            <ChartSeriesTooltip Visible="true" />
        </ChartSeries>
    </ChartSeriesItems>

    <ChartCategoryAxes>
        <ChartCategoryAxis Categories="@years" />
    </ChartCategoryAxes>
</TelerikChart>

<TelerikChart>
    <ChartSeriesItems>
        <ChartSeries Type="ChartSeriesType.Column" Name="Sells 1" Data="@sells1" >
            <ChartSeriesStack Enabled="true" Group="group1"></ChartSeriesStack>
            <ChartSeriesTooltip Visible="true" />
        </ChartSeries>
        <ChartSeries Type="ChartSeriesType.Column" Name="Sells 2" Data="@sells2">
            <ChartSeriesStack Enabled="true" Group="group1"></ChartSeriesStack>
            <ChartSeriesTooltip Visible="true" />
        </ChartSeries>
        <ChartSeries Type="ChartSeriesType.Column" Name="Profit" Data="@profit">
            <ChartSeriesStack Enabled="true" Group="group2"></ChartSeriesStack>
            <ChartSeriesTooltip Visible="true" />
        </ChartSeries>
    </ChartSeriesItems>

    <ChartCategoryAxes>
        <ChartCategoryAxis Categories="@years" />
    </ChartCategoryAxes>

    <ChartValueAxes>
        <ChartValueAxis Color="green"></ChartValueAxis>
    </ChartValueAxes>
</TelerikChart>


@code {
    object[] years = new object[] { "2011", "2012", "2013", "2014", "2015", "2016", "2017", "2018" };
    List<object> downloads = new List<object>() { 30, 35, 40, 45, 40, 35, 30, 10 };
    List<object> streams = new List<object>() { 5, 6, 8, 15, 23, 35, 55, 78 };
    List<object> cpu = new List<object>() { 2, 6, 8, 45, 40, 78, 55, 50 };
    List<object> issues = new List<object>() { 45, 40, 3, 2, 25 };
    List<object> comments = new List<object>() { 15, 6, 32, 28, 38, 35, 2, 6 };
    List<object> likes = new List<object>() { 2, 6, 8, 45, 40, 40, 55 };
    List<object> dislikes = new List<object>() { 0, 0, 0, 5, 55 };
    List<object> sells1 = new List<object>() { 0, 0, 0, 5, 55 };
    List<object> sells2 = new List<object>() { 0, 5, 0, 15, 30 };
    List<object> profit = new List<object>() { 0, 5, 0, 15, 30 };
}
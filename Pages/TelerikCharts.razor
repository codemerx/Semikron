@page "/telerik-charts"

<TelerikChart>
    <ChartSeriesItems>
        <ChartSeries Type="ChartSeriesType.Line" Name="Downloads" Data="@downloads">
            <ChartSeriesTooltip Visible="true" />
        </ChartSeries>
        <ChartSeries Type="ChartSeriesType.Line" Name="Streams" Data="@streams"></ChartSeries>

        <ChartSeries Type="ChartSeriesType.Area" Name="CPU" Data="@cpu">
            <ChartSeriesTooltip Visible="true" />
        </ChartSeries>
    </ChartSeriesItems>

    <ChartCategoryAxes>
        <ChartCategoryAxis Categories="@years" />
    </ChartCategoryAxes>
</TelerikChart>


@code {
    object[] years = new object[] { "2011", "2012", "2013", "2014", "2015", "2016", "2017", "2018" };
    List<object> downloads = new List<object>() { 30, 35, 40, 45, 40, 35, 30, 10 };
    List<object> streams = new List<object>() { 5, 6, 8, 15, 23, 35, 55, 78 };
    List<object> cpu = new List<object>() { 2, 6, 8, 45, 40, 40, 55, 50 };
    List<object> comments = new List<object>() { 15, 6, 32, 28, 38, 35, 2, 6 };
    List<object> likes = new List<object>() { 2, 6, 8, 45, 40, 40, 55, 50 };
}